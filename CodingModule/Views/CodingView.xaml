<UserControl
    x:Class="CodingModule.Views.CodingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodingModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="UTF-8编码转换">
                <local:UnicodeCoding />
            </TabItem>
            <TabItem Header="URL编码解码">
                <local:UrlCoding />
            </TabItem>
            <TabItem Header="Unicode/ASCII编码转换" />
            <TabItem Header="ASCII编码解码" />
        </TabControl>
    </Grid>
</UserControl>
